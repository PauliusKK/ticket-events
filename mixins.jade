mixin information-tab(divClass, src, alt, heading, description)

    // Information tab (underneath the social media row)
    .column.large-3.information-tab

        // Left side image.
        .float-left
            div(class="#{divClass}")
                img(src=src, alt=alt)

        // Right side text
        .float-right
            h5 #{heading}
            p #{description}

