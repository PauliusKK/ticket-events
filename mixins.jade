mixin recommended-event(src, alt, heading)

    // Recommended event tab
    .column.large-2.recommended-tab
        img.float-center(src=src, alt=alt)
        h6.text-center #{heading}

        // Star rating
        .rating
            i.fi-star
            i.fi-star
            i.fi-star
            i.fi-star
            i.fi-star.inactive

