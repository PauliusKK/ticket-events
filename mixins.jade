mixin menu(LeftSideText, FirstLabel, SecondLabel, ThirdLabel, FourthLabel, FifthLabel)

        // Navigation before events
        .column.small-12.menu-navigation

            // Left side text
            ul.menu.float-left
                li: strong #{LeftSideText}

            // Right side text
            ul.menu.float-right
                li #{FirstLabel}
                li #{SecondLabel}
                li #{ThirdLabel}
                li #{FourthLabel}
                li #{FifthLabel}

mixin sports-event-label(day, month, heading, stadium, button_text)

    // Sports event label
    .event.column.large-12.event-label

        // Calendar icon and date
        .column.large-2.calendar
            ul.menu
                li: img(src="images/icon-calendar.png", alt="Date")
                li.date: strong #{day}<br>#{month}

        // Description
        .column.large-8.description
            h6: strong #{heading}
            p #{stadium}

        // Button
        .column.large-2.tab-button
            a.tiny.button.event-button(href="") #{button_text}

mixin sports-event(src, alt, stadium, heading, button_text)

    // Sport event tab
    .column.sports

        // Image, text and button
        .sport-event
            img(src=src, alt=alt)
            h6 #{stadium}
            p #{heading}
            a.tiny.button.sport-button(href="") #{button_text}

mixin sports-event-small-text(src, alt, stadium, heading, className, smallText, button_text)

    // Sport event tab
    .column.sports

        // Image, text and button
        .sport-event
